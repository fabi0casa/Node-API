<h2>Adicionar Jogo</h2>
<form action="/jogos/add" method="POST" enctype="multipart/form-data">
    <label for="titulo">Título:</label>
    <input type="text" name="titulo" required>

    <label for="descricao">Descrição:</label>
    <textarea name="descricao"></textarea>

    <label for="preco">Preço:</label>
    <input type="number" name="preco" step="0.01" required>

    <label for="genero">Gênero:</label>
    <select name="genero" multiple>
        <% generos.forEach(genero => { %>
            <option value="<%= genero._id %>"><%= genero.nome %></option>
        <% }) %>
    </select>

    <label for="plataforma">Plataforma:</label>
    <select name="plataforma" multiple>
        <% plataformas.forEach(plataforma => { %>
            <option value="<%= plataforma._id %>"><%= plataforma.nome %></option>
        <% }) %>
    </select>

    <label for="estoque">Estoque:</label>
    <input type="number" name="estoque" required>

    <label for="imagem">URL da Imagem:</label>
    <input type="text" name="imagem">

    <label for="upload">Upload de Imagem:</label>
    <input type="file" name="upload" accept="image/*">

    <button type="submit">Adicionar Jogo</button>
</form>
